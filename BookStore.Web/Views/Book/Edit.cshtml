 @model BookStore.ViewModels.BookViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Book</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" class="form-group" asp-controller="Book" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row form-group">
                <div class="col-3"> <label asp-for="Id" class="control-label"></label></div>
                <div class="col-6"> <input readonly asp-for="Id" class="form-control" /></div>
                <div class="col-3"> <span asp-validation-for="Id" class="text-danger"></span></div>
            </div>
            <br />
            <div class="row">
                <div class="col-3">
                    <label asp-for="Title" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Title" class="form-control" />
                </div>
                <div class="col-3">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-3">
                    <label asp-for="Description" class="control-label"></label>
                </div>
                <div class="col-6">
                    <input asp-for="Description" class="form-control" />
                </div>
                <div class="col-3">
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-3">
                    <label asp-for="PHotoFile" class="control-label">Book Photo</label>
                </div>
                <div class="col-6">
                    <input type="file" asp-for="PHotoFile" class="form-control" />
                </div>
                <div class="col-3">
                    <span class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-3">
                    <label asp-for="DocumentFile" class="control-label">Upload Book</label>
                </div>
                <div class="col-6">
                    <input type="file" asp-for="DocumentFile" class="form-control" />
                </div>
                <div class="col-3">
                    <span class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-3">
                    <label asp-for="AuthorId" class="control-label"></label>
                </div>
                <div class="col-6">
                    <select asp-for="AuthorId" class="form-control" asp-items="@(SelectList)ViewBag.AuthorsList"></select>
                </div>
                <div class="col-3">
                    <span asp-validation-for="AuthorId" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="row">
              
                <center>
                    <input type="submit" value="Save" class="btn btn-primary" />
                    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
                </center>
                   
            </div>
        </form>

    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
